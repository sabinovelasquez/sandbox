%section#cases
	.container
		.row.text-center
			%h2
				Casos
			%hr
			%p
				Algunos ejemplos aplicados.

	.gal
		.case.col-sm-4
			.hover.text-center
				.inner
					%h3 
						Lucky Day
					%small Enjoy
					%hr
					= precede '<strong>Desafío:</strong>' do
						%p
							Realizar un Tragamonedas digital en un lugar público.
					= precede '<strong>Respuesta:</strong>' do
						%p
							Desarrollamos una Aplicación Web para móviles, la cual controla a nuestro Tragamonedas a través de un código de 3 dígitos y un match en la ubicación del usuario.
					.footer
						.col-xs-4
							.icon.text-center
								%i.fa.fa-map-marker
							%small
								Sistema de localización
						.col-xs-4
							.icon.text-center
								%i.fa.fa-mobile
							%small
								Control desde mobile
						.col-xs-4
							.icon.text-center
								%i.fa.fa-database
							%small
								Control de datos
			%img.img-responsive( src = "img/cases/enjoy-slotmachine.png" )
		.case.col-sm-4
			.hover.text-center
				.inner
					%h3 El Buen Anfitrión
					%small Jumbo
					%hr
					= precede '<strong>Desafío:</strong>' do
						%p
