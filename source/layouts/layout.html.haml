!!!
%html{ :'lang' => 'es', :'ng-app' => 'app'}
  %head

    %meta{ :charset => 'utf-8' }
    %meta{ :'http-equiv' => 'X-UA-Compatible',  :'content' => 'IE=edge' }
    %meta{ :'name' => 'viewport', :'content' => 'width = device-width, initial-scale = 1, maximum-scale = 1' }
    
    %meta{ :'property' => 'og:url', :'content' => 'http://sandbox.cl' }
    %meta{ :'property' => 'og:title', :'content' => 'Sandbox - Juegos y aplicaciones digitales con propósito.' }
    %meta{ :'property' => 'og:image', :'content' => 'http://sandbox.cl/img/fb.png' }
    %meta{ :'property' => 'og:description', :'content' => 'Somos una empresa dedicada al desarrollo de aplicaciones y videojuegos.' }
    %meta{ :'name' => 'Sandbox - Juegos y aplicaciones digitales con propósito.' }
    %meta{ :'name' => 'keywords', :'content' => 'app, appstore, desarrollo, aplicaciones, totem, btl, marketing' }

    %title 
      = current_page.data.title || 'Title'
    = stylesheet_link_tag 'all'

  %body
    = yield
    = javascript_include_tag 'https://mandrillapp.com/api/docs/js/mandrill.js', 'all'